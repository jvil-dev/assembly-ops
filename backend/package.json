{
  "name": "assembly-ops-backend",
  "version": "1.0.0",
  "description": "Backend API for AssemblyOps security volunteer management",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "docker:dev": "docker compose -f ../docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f ../docker-compose.yml -f docker-compose.dev.yml down",
    "docker:build": "docker build -t assemblyops-backend .",
    "docker:prod": "docker compose -f ../docker-compose.yml up --build -d",
    "docker:prod:down": "docker compose -f ../docker-compose.yml down",
    "test": "dotenv -e .env.test -- node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "dotenv -e .env.test -- node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "dotenv -e .env.test -- node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "test:ci": "node --experimental-vm-modules node_modules/.bin/jest --ci --coverage --reporters=default",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "ci": "npm run lint && npm run type-check && npm run test:ci"
  },
  "keywords": [
    "AssemblyOps",
    "volunteer",
    "scheduling",
    "assembly",
    "convention"
  ],
  "author": "Jorge Villeda",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.1.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "3.7.4",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^7.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
