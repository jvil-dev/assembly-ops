generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Admin users who manage events and volunteers
model Admin {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String
  congregation String
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  events Event[]

  @@map("admins")
}

// Assembly Events (Circuit Assembly or Regional Convention)
model Event {
  id        String    @id @default(cuid())
  name      String
  type      EventType
  location  String
  startDate DateTime  @map("start_date")
  endDate   DateTime  @map("end_date")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  // Relations
  createdBy   Admin       @relation(fields: [createdById], references: [id])
  createdById String      @map("created_by_id")
  volunteers  Volunteer[]
  roles       Role[]
  sessions    Session[]
  zones       Zone[]

  @@map("events")
}

// Volunteers assigned to events (generated ID/token auth)
model Volunteer {
  id           String               @id @default(cuid())
  name         String
  phone        String?
  email        String?
  congregation String
  appointment  VolunteerAppointment @default(PUBLISHER)

  // Authentication (generated credentials - not email || password)
  generatedId String @unique @map("generated_id")
  loginToken  String @map("login_token")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  event        Event                   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId      String                  @map("event_id")
  role         Role?                   @relation(fields: [roleId], references: [id])
  roleId       String?
  availability VolunteerAvailability[]

  @@map("volunteers")
}

// Volunteer availability per session
model VolunteerAvailability {
  id          String  @id @default(cuid())
  isAvailable Boolean @default(true) @map("is_available")

  // Relations
  volunteer   Volunteer @relation(fields: [volunteerId], references: [id], onDelete: Cascade)
  volunteerId String    @map("volunteer_id")

  session   Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId String  @map("session_id")

  @@unique([volunteerId, sessionId])
  @@map("volunteer_availability")
}

// Roles are event-specific, defined by each overseer
model Role {
  id           String   @id @default(cuid())
  name         String // "Attendant Overseer", "Captain", etc
  displayOrder Int      @default(0) @map("display_order")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  event      Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId    String      @map("event_id")
  volunteers Volunteer[]

  @@map("roles")
}

// Event sessions (Morning/Afternoon coverage periods)
model Session {
  id        String   @id @default(cuid())
  name      String
  date      DateTime
  startTime DateTime @map("start_time")
  endTime   DateTime @map("end_time")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  event        Event                   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId      String                  @map("event_id")
  availability VolunteerAvailability[]

  @@map("sessions")
}

// Zones/posts that need attendant coverage
model Zone {
  id            String   @id @default(cuid())
  name          String
  description   String?
  requiredCount Int      @default(1) @map("required_count")
  displayOrder  Int      @default(0) @map("display_order")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId String @map("event_id")

  @@map("zone")
}

enum EventType {
  CIRCUIT_ASSEMBLY
  REGIONAL_CONVENTION
}

enum EventStatus {
  DRAFT
  PUBLISHED
  ACTIVE
  COMPLETED
  CANCELLED
}

enum VolunteerAppointment {
  PUBLISHER
  MINISTERIAL_SERVANT
  ELDER
}
